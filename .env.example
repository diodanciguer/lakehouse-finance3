# UID/GID (Linux) — ajuste AIRFLOW_UID depois para o do servidor
AIRFLOW_UID=1000
AIRFLOW_GID=0

# Chaves (substituir no .env real)
AIRFLOW__CORE__FERNET_KEY=REPLACE_ME_FERNET
AIRFLOW__WEBSERVER__SECRET_KEY=REPLACE_ME_SECRET

# Admin inicial
AIRFLOW_ADMIN_USERNAME=airflow
AIRFLOW_ADMIN_PASSWORD=airflow
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Database interno (Postgres 16 do compose)
SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres-306:5432/airflow

# Celery (Redis interno)
CELERY_BROKER_URL=redis://redis-306:6379/0
CELERY_RESULT_BACKEND=db+postgresql://airflow:airflow@postgres-306:5432/airflow

# Dependências extras (opcional)
_PIP_ADDITIONAL_REQUIREMENTS=
